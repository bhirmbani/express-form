<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <!-- jquery from cdn -->
    <script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="page-header" align="center">
            <h1 class="text-info"><%= title %></h1>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-offset-2 col-md-8">
          <form class="" action="/add" method="post">
            <div class="form-group">
              <label for="content"><h3 class="text-muted">Post it here!</h3></label>
              <textarea name="content" class="form-control" placeholder="What's on your head?"></textarea>
            </div>
            <div class="form-group" align="right">
              <button type="submit" class="btn btn-lg btn-info">Post</button>
            </div>
          </form>
        </div>
      </div>
      <div class="row">
        <div class="col-md-offset-2 col-md-8">
        <%
          data.forEach(post => {
            let date = new Date(post.createdAt);
            let localeDate = date.toLocaleString();
        %>
          <div class="media">
            <div class="media-body">
              <h4 class="media-heading">You said <small class="text-muted"> - <%= localeDate %></small></h4>
              <%= post.content %>
            </div>
          </div>
        <% }); %>
        </div>
      </div>
    </div>
  </body>
</html>
